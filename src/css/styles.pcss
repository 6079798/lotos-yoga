        background: url("../img/subscription-bcg-desktop.png") left no-repeat;
        background-origin: content-box;
    }

    @media screen and (min-width: 1600px) {
        background: url("../img/subscription-bcg-desktop.png") 21% 47% no-repeat;
    }

    .section__content {
        @media screen and (min-width: 768px) {
            margin-top: 11px;
        }

        @media screen and (min-width: 1200px) {
            margin-left: 50%;
            max-width: 564px;
        }

        @media screen and (min-width: 1600px) {
            margin-top: -63px;
        }
    }

    &__items {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-bottom: 40px;
        min-width: 564px;

        @media screen and (min-width: 768px) {
            margin-bottom: 60px;
            width: 70%;
        }
    }

    &__item {
        cursor: pointer;
        background: #fff;
        display: flex;
        margin-bottom: 4px;
        padding: 38px 20px 38px 40px;
        transition: var(--baseTransition);
        width: calc(50% - 2px);

        &:nth-last-child(-n+2) {
            margin-bottom: 0;
        }

        &:hover {
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
            transform: scale(1.02);
        }

        &--active {
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
            transform: scale(1.02);

            &:hover {
                box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
                transform: scale(1.02);
            }
        }
    }

    &__info {
        margin-right: auto;
        transition: var(--baseTransition);

        .subscription__item:hover & {
            transform: scale(0.98);
        }

        .subscription__item--active & {
            transform: scale(0.98) !important;
        }

        .subscription__item--active:hover & {
            transform: none;
        }
    }

    &__name {
        font-size: 18px;
        font-weight: 300;
        margin-bottom: 12px;
    }

    &__price {
        font-size: 18px;
        font-weight: 300;

        span {
            color: #f78e6a;
            font-size: 24px;
            font-weight: 700;
        }
    }

    &__btn {
        align-self: center;
        /*noinspection CssInvalidFunction*/
        background: inline("cross-12-muted.png") center no-repeat, #f7f3f2;
        border-radius: 50%;
        display: block;
        flex-shrink: 0;
        height: 40px;
        width: 40px;

        .subscription__item:hover & {
            /*noinspection CssInvalidFunction*/
            background: inline("cross-12.png") center no-repeat, linear-gradient(to right, #f78e6a 0%, #fc66a2 100%);
        }

        .subscription__item--active & {
            /*noinspection CssInvalidFunction*/
            background: inline("cross-12.png") center no-repeat, linear-gradient(to right, #f78e6a 0%, #fc66a2 100%);
        }
    }
}


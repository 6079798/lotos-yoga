:root {
    --baseTransition: all 0.2s ease-in-out;
    --bcg: #fbf5f4;
    --sectionBorder: #2d2d2d;
    --text: #000;
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

.page {
    background: var(--bcg);
    color: var(--text);
    font-family: 'Geometria', sans-serif;
    font-size: 16px;
    min-width: 320px;

    &--no-scroll {
        height: 100vh;
        overflow: hidden;
        padding-right: 15px;
    }

    &__container {
        margin: auto;
        max-width: 1920px;
    }
}

.header {
    display: flex;
    justify-content: space-between;
    left: 0;
    margin: auto;
    max-width: 1920px;
    padding: 0 20px;
    position: fixed;
    right: 0;
    top: 20px;
    width: 100%;
    z-index: 70;

    @media screen and (min-width: 768px) {
        padding: 0 30px;
        top: 30px;
    }

    @media screen and (min-width: 1600px) {
        justify-content: flex-start;
        padding: 0 90px;
        top: 70px;
    }

    &__nav-btn {
        @media screen and (min-width: 768px) {
            flex-basis: 50%;
        }
    }

    &__title {
        display: none;

        @media screen and (min-width: 1600px) {
            display: block;
            font-size: 18px;
            font-weight: 400;
            margin-right: auto;
        }

        &::before {
            @media screen and (min-width: 1600px) {
                background: #f78e6a;
                border-radius: 50%;
                content: '';
                display: inline-block;
                height: 6px;
                margin-bottom: 2px;
                margin-right: 10px;
                width: 6px;
            }
        }
    }

    &__logo {
        height: 25px;
        margin-top: -5px;
        width: 40px;

        @media screen and (min-width: 768px) {
            height: 30px;
            width: 49px;
        }

        @media screen and (min-width: 1600px) {
            margin-top: 0;
            position: absolute;
            left: 90px;
            top: calc(50vh - 70px);
            transform: translateY(-50%);
        }

        img {
            display: block;
            height: auto;
            width: 100%;
        }
    }

    &__phone {
        display: none;

        @media screen and (min-width: 768px) {
            display: block;
            flex-basis: 50%;
            font-family: 'Montserrat', sans-serif;
            font-size: 18px;
            font-weight: 400;
            text-align: right;
        }

        @media screen and (min-width: 1600px) {
            flex-basis: auto;
        }
    }
}

.nav-btn {
    cursor: pointer;
    display: flex;
    height: 16px;
    margin-left: 4px;
    width: 24px;

    &--is-hidden {
        display: none;
    }

    &__bars {
        display: flex;
        flex-direction: column;
        justify-content: space-between;

        @media screen and (min-width: 768px) {
            margin-right: 15px;
        }
    }

    &__label {
        display: none;

        @media screen and (min-width: 768px) {
            display: block;
            font-size: 18px;
            font-weight: 400;
        }
    }

    &__bar {
        background: #f78e6a;
        height: 2px;
        width: 20px;

        &::before {
            background: #000;
            content: '';
            display: block;
            height: 2px;
            margin-left: -4px;
            width: 2px;
        }

        &--bottom {
            transition: var(--baseTransition);
            width: 14px;

            .nav-btn:hover & {
                width: 20px;
            }
        }
    }
}

.nav {
    align-items: center;
    background-color: rgba(251, 245, 244, 0.9);
    display: flex;
    height: 100%;
    justify-content: center;
    left: 0;
    overflow: hidden;
    position: fixed;
    text-align: center;
    top: 0;
    transition: var(--baseTransition);
    width: 0;
    z-index: 100;

    @media screen and (min-width: 768px) {
        position: absolute;
        display: none;
        height: auto;
        width: auto;
        left: 0;
        top: -30px;
        padding: 30px 49px 40px 79px;
        text-align: left;
        box-shadow: 1px 10px 10px -10px rgba(0, 0, 24, 0.5);
    }

    @media screen and (min-width: 1600px) {
        left: 0;
        top: -70px;
        padding: 70px 139px 40px 169px;
    }

    &--shown {
        width: 100%;

        @media screen and (min-width: 768px) {
            display: flex;
        }
    }

    &__close {
        cursor: pointer;
        width: 24px;
        height: 24px;
        border: 0;
        outline: 0;
        /*noinspection CssInvalidFunction*/
        background: transparent inline('close.png') center no-repeat;
        position: absolute;
        top: 16px;
        left: 19px;

        @media screen and (min-width: 768px) {
            top: 30px;
            left: 30px;
        }

        @media screen and (min-width: 1600px) {
            top: 70px;
            left: 90px;
        }
    }

    &__links {
        font-size: 24px;
        font-weight: 400;
        list-style-type: none;

        @media screen and (min-width: 768px) {
            font-size: 16px;
        }
    }

    &__link {
        margin-bottom: 50px;

        @media screen and (min-width: 768px) {
            margin-bottom: 30px;
        }

        &:last-child {
            margin-bottom: 0;
        }

        a {
            color: rgba(0, 0, 0, 0.5);
            text-decoration: none;
            transition: var(--baseTransition);

            &:hover {
                color: var(--text)
            }
        }
    }

    &__active {
        color: var(--text) !important;
    }
}

.section {
    align-items: center;
    border-bottom: 3px solid transparent;
    display: flex;
    padding: 20px;

    @media screen and (min-width: 768px) {
        padding: 30px;
    }

    @media screen and (min-width: 1600px) {
        padding: 70px 90px;
    }

    &::after {
        content: '';
        display: block;
        font-size: 0;
        min-height: calc(100vh - 40px);

        @media screen and (min-width: 768px) {
            min-height: calc(100vh - 60px);
        }

        @media screen and (min-width: 1600px) {
            min-height: calc(100vh - 140px);
        }
    }

    &:last-child {
        border-bottom: 0;
        min-height: 100vh;
    }

    &__content {
        height: 100%;
        width: 100%;
    }
}

.section-text {
    font-size: 16px;
    font-weight: 300;
    line-height: 1.88;
    margin-bottom: 25px;
    text-align: left;

    @media screen and (min-width: 768px) {
        line-height: 2.19;
        margin-bottom: 18px;
    }

    @media screen and (min-width: 1200px) {
        font-size: 18px;
        line-height: 1.94;
    }

    &:last-child {
        margin-bottom: 0;
    }
}

.section-btn {
    align-items: center;
    background: #f78e6a;
    border-radius: 29px;
    color: #fff;
    cursor: pointer;
    display: inline-flex;
    font-weight: 400;
    padding-right: 50px;
    text-align: left;
    transition: var(--baseTransition);

    &::before {
        /*noinspection CssInvalidFunction*/
        background: inline("cross-16.png") center no-repeat, #f78e6a linear-gradient(to right, rgba(247, 142, 106, 0) 0%, #fc66a2 100%);
        border-radius: 50%;
        content: '';
        display: inline-block;
        flex-shrink: 0;
        height: 60px;
        margin-right: 20px;
        width: 60px;
    }

    &--check {
        &::before {
            /*noinspection CssInvalidFunction*/
            background: inline("check.png") center no-repeat, #f78e6a linear-gradient(to right, rgba(247, 142, 106, 0) 0%, #fc66a2 100%);
        }
    }

    &--submit {
        border: none;
        font-family: 'Geometria', sans-serif;
        font-size: 16px;
        margin-top: 22px;
        outline: none;

        @media screen and (min-width: 768px) {
            margin-top: 34px;
        }

        &::before {
            /*noinspection CssInvalidFunction*/
            background: inline("envelope.png") center no-repeat, #f78e6a linear-gradient(to right, rgba(247, 142, 106, 0) 0%, #fc66a2 100%);
        }

        .section-btn__text {
            font-family: "Geometria", sans-serif;
            font-size: 16px;
        }
    }

    &:hover {
        background: #fff;
        box-shadow: 0 0 50px rgba(0, 0, 0, 0.1);
        color: #fc66a2;
    }
}

.arrow-btn {
    /*noinspection CssInvalidFunction*/
    background: inline("arrow-down.png") no-repeat center, #f78e6a linear-gradient(to top, rgba(247, 142, 106, 0) 0%, #fc66a2 100%);
    border-radius: 50%;
    cursor: pointer;
    display: block;
    height: 30px;
    outline: none;
    position: relative;
    transition: var(--baseTransition);
    width: 30px;

    &:hover {
        /*noinspection CssInvalidFunction*/
        background: inline("arrow-down-hover.png") no-repeat center, #fff;
    }

    &--prev {
        /*noinspection CssInvalidFunction*/
        background: inline("arrow-left.png") center no-repeat, #f78e6a linear-gradient(to top, rgba(247, 142, 106, 0) 0%, #fc66a2 100%);

        &:hover {
            /*noinspection CssInvalidFunction*/
            background: inline("arrow-left-hover.png") center no-repeat, #fff;
        }
    }

    &--next {
        /*noinspection CssInvalidFunction*/
        background: inline("arrow-right.png") center no-repeat, #f78e6a linear-gradient(to top, rgba(247, 142, 106, 0) 0%, #fc66a2 100%);

        &:hover {
            /*noinspection CssInvalidFunction*/
            background: inline("arrow-right-hover.png") center no-repeat, #fff;
        }
    }

    &--up {
        transform: rotate(180deg);
    }
}

.slider-nav {
    list-style-type: none;

    &__label {
        display: none;

        @media screen and (min-width: 768px) {
            display: block;
            padding-right: 10px;
            position: absolute;
            font-size: 18px;
            font-weight: 500;
            color: #fc66a2;
            transition: var(--baseTransition);
        }
    }

    &__item {
        color: #949090;
        cursor: pointer;
        font-size: 18px;
        font-weight: 400;
        margin-bottom: 20px;
        outline: none;
        transition: color 0.2s ease-in-out;

        &:hover {
            color: var(--text);
        }

        &:last-child {
            margin-bottom: 0;
        }

        &.tns-nav-active {
            color: var(--text);
        }
    }
}

.hero {
    background: url('../img/hero-bcg-mobile.png') center 19% no-repeat;

    @media screen and (min-width: 768px) {
        background: url("../img/hero-bcg-tablet.png") 120% 48% no-repeat;
    }

    @media screen and (min-width: 992px) {
        background: url("../img/hero-bcg-desktop.png") left no-repeat;
    }

    @media screen and (min-width: 1600px) {
        background-origin: content-box;
        background-position: 16% 58%;
    }

    .section__content {
        margin-top: 210px;
        text-align: center;

        @media screen and (min-width: 768px) {
            margin-top: -25px;
            width: 58%;
        }

        @media screen and (min-width: 992px) {
            margin-left: auto;
            margin-top: 0;
            width: 50%;
        }

        @media screen and (min-width: 1200px) {
            margin-top: -44px;
        }
    }

    &__title {
        color: #f78e6a;
        display: inline-block;
        font-size: 130px;
        font-weight: 500;
        letter-spacing: -6.5px;
        margin-bottom: -15px;
        position: relative;

        @media screen and (min-width: 768px) {
            display: block;
            font-size: 150px;
            letter-spacing: -7.5px;
            margin-bottom: -26px;
            padding-left: 7px;
            text-align: left;
        }

        @media screen and (min-width: 1200px) {
            font-size: 200px;
            /*noinspection CssFloatPxLength*/
            letter-spacing: 1.5px;
            margin-bottom: -21px;
        }

        &::after {
            @media screen and (min-width: 768px) {
                /*noinspection CssInvalidFunction*/
                background: inline('arrow-down.png') no-repeat center, #f78e6a linear-gradient(to top, rgba(247, 142, 106, 0) 0%, #fc66a2 100%);
                border-radius: 50%;
                bottom: 0;
                content: '';
                display: inline-block;
                height: 30px;
                left: 122px;
                margin: auto;
                position: absolute;
                top: 10px;
                width: 30px;
            }

            @media screen and (min-width: 1200px) {
                content: none;
            }
        }

        span {
            display: inline-block;
            font-size: 16px;
            font-weight: normal;
            left: -44px;
            letter-spacing: normal;
            position: absolute;
            top: 64px;
            transform: rotate(-90deg);

            @media screen and (min-width: 768px) {
                font-size: 18px;
                left: -42px;
                top: 74px;
            }

            @media screen and (min-width: 1200px) {
                font-size: 24px;
                left: -58px;
                top: 99px;
            }
        }
    }

    &__cta {
        align-items: center;
        display: flex;
        justify-content: center;

        @media screen and (min-width: 768px) {
            justify-content: flex-start;
        }

        @media screen and (min-width: 1200px) {
            max-width: 430px;
        }

        .section-text {
            @media screen and (min-width: 768px) {
                font-size: 20px;
                line-height: 1.5;
            }
        }
    }

    &__btn {
        /*noinspection CssInvalidFunction*/
        background: inline("cross-20.png") no-repeat center, #f78e6a linear-gradient(to top, rgba(247, 142, 106, 0) 0%, #fc66a2 100%);
        border-radius: 50%;
        cursor: pointer;
        display: block;
        flex-shrink: 0;
        height: 50px;
        margin-right: 8px;
        position: relative;
        transition: var(--baseTransition);
        width: 50px;

        @media screen and (min-width: 768px) {
            margin-right: 21px;
        }

        @media screen and (min-width: 1200px) {
            height: 60px;
            margin-right: 27px;
            width: 60px;
        }

        &:hover {
            /*noinspection CssInvalidFunction*/
            background: #fff inline("cross-20-hover.png") no-repeat center;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
        }
    }
}

